<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllDetailsActivity"
    android:orientation="vertical"
    android:background="@color/colorDark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="3.5/5"
                android:textColor="#FFFFFF"
                android:textColorHint="#A82020"
                android:textDirection="firstStrong"
                android:textFontWeight="400"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_star_rate_24"></ImageView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="A must watch movie. Good direction"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#A82020"
            android:textDirection="firstStrong"
            android:textFontWeight="900"
            android:textSize="24sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="by Rachel M on Oct 6, 2020"
            android:textColor="#FFFFFF"
            android:textColorHint="#A82020"
            android:textDirection="firstStrong"
            android:textFontWeight="900"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scrollHorizontally="true"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printe"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textColorHint="#A82020"
            android:textDirection="firstStrong"
            android:textFontWeight="400"
            android:textSize="18sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"/>

        <!--        android:ellipsize="end"-->
        <!--        app:trimExpandedText="Show more..."-->
        <!--        app:trimCollapsedText="Show less"-->
        <!--        app:trimMode="trimModeLength"-->
        <!--        app:trimLength="168"-->


    </LinearLayout>

</ScrollView>