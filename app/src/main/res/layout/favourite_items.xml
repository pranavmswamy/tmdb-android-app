<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="155dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginTop="20dp"
    android:background="@color/colorDark"
    android:foreground="?attr/selectableItemBackground">

<androidx.cardview.widget.CardView
    android:id="@+id/cardOne"
    android:layout_width="130dp"
    android:layout_height="155dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    android:color="@color/colorDark"
    android:layout_centerInParent="true"
    app:cardBackgroundColor="@color/colorDark"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_view"
            android:src="@drawable/ic_launcher_background"
            android:foreground="@drawable/main_image_gradient"/>



        <TextView
            android:id="@+id/text_view_isMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textSize="15sp"
            android:layout_alignBottom="@+id/image_view"
            android:text="Movie"
            android:textColor="#ffffff"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_releaseYear"
            android:layout_toRightOf="@+id/text_view_isMovie"
            android:layout_alignBottom="@+id/image_view"
            android:textSize="15sp"
            android:textColor="#ababab"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"/>

        <ImageView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/image_view"
            android:src="@drawable/ic_baseline_remove_circle_outline_24"
            android:tint="#146eb4"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>

</RelativeLayout>